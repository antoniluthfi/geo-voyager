<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/leftAnswerContainer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/bg_quiz_answer"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/squircle_ripple_effect_2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/tvLeftAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left Answer"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/rightAnswerContainer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/bg_quiz_answer"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/squircle_ripple_effect_2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/tvRightAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right Answer"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>